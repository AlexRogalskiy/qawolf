{
  "name": "qawolf",
  "private": true,
  "scripts": {
    "bootstrap": "npm i && lerna bootstrap --ignore-scripts && npm run build",
    "build": "tsc --build packages/tsconfig.project.json && lerna run --scope @qawolf/web build",
    "lint": "eslint packages --ext .ts --ignore-path .gitignore --cache",
    "pretest": "npm run lint",
    "test": "lerna run test",
    "test:services": "docker-compose up -d",
    "watch": "tsc --build --watch packages/tsconfig.project.json"
  },
  "dependencies": {
    "fs-extra": "^8.1.0"
  },
  "devDependencies": {
    "@typescript-eslint/parser": "^2.3.3",
    "@types/fs-extra": "^8.0.0",
    "@types/jest": "^24.0.18",
    "@types/node": "^12.7.12",
    "eslint": "^6.5.1",
    "eslint-config-prettier": "^6.4.0",
    "eslint-plugin-prettier": "^3.1.1",
    "jest": "^24.9.0",
    "lerna": "^3.17.0",
    "prettier": "^1.18.2",
    "ts-jest": "^24.1.0",
    "ts-node": "^8.4.1",
    "typescript": "^3.6.4"
  }
}
