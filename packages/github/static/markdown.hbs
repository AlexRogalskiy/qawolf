{{#if failedCount}}
<h2>{{{failedCount}}} Failed</h2>
{{#each failedTests}}
<details>
    <summary>:x: {{{name}}}</summary>
    <br />
    <b>Steps</b>
    <ol>
        {{#each steps}}
        <li>
            {{emoji}}
            {{#if strikethrough}}
            <s>{{name}}</s>
            {{else}}
            {{name}}
            {{/if}}
        </li>
        {{/each}}
    </ol>
</details>
{{/each}}
{{/if}}

{{#if passedCount}}
<h2>{{{passedCount}}} Passed</h2>
{{#each passedTests}}
<details>
    <summary>:white_check_mark: {{{name}}}</summary>
    <br />
    <b>Steps</b>
    <ol>
        {{#each steps}}
        <li>{{emoji}} {{name}}</li>
        {{/each}}
    </ol>
</details>
{{/each}}
{{/if}}