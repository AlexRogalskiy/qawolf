pipelines:
  default:
    - step:
        name: QA Wolf Tests
        image: qawolf/qawolf:v{{{version}}}
        caches:
          - node
        script:
          - npm install
          ## Start local server
          # - npm run start & npx wait-on http://localhost:3000
          - QAW_ARTIFACT_PATH=artifacts npx qawolf test --all-browsers
        artifacts:
          - artifacts/**
